     $this->form->add(array(
        'name' => 'cancel',
        'type' => 'Zend\Form\Element\Button',
        'attributes' => array(
            'value' => "Cancelar",
            'class' => 'pull-right btn btnCancelCustom',
            'onclick' => 'window.location.href="' . $this->url('zf-metal.admin/users', array(), array('query' => $this->routeParams), true) . '"',
            ),
        'options' => array(
            'label' => 'Cancelar',
            )
        ));

     $this->form->get('name')
     ->setAttribute('placeholder', 'Nombre')
     ->setLabel('Nombre');
     $this->form->get('username')
     ->setAttribute('placeholder', 'Usuario')
     ->setLabel('Usuario');
     $this->form->get('email')
     ->setAttribute('value', '');

     echo $this->renderForm($this->form, \ZfMetal\Commons\Consts::STYLE_VERTICAL, \ZfMetal\Commons\Consts::COLUMNS_TWO, $groups);
     ?>

 </div>
